{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2021", "DOM"],
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "baseUrl": ".",                    // for paths
    "paths": {
      "@shared/*": ["shared/*"]        // map @shared to /shared
    }
  },
  "include": ["src", "shared/**/*.ts"],  // allow importing shared types
  "exclude": ["backend", "node_modules", "dist"]
}



