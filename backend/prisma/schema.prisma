generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SubscriptionStatus {
  active
  canceled
  incomplete
  incomplete_expired
  paused
  trialing
  past_due
  unpaid
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  password        String
  userName        String
  stripeId        String?  // Nullable â€” only set after customer creation
  trialExpiresAt  DateTime?
  settings        Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime? @updatedAt
  verifiedAt      DateTime?
  subscription    Subscription?
  pitchData       PitchData[]
  unlockedPatterns UserUnlockedPattern[]
}


model PitchData {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  scale     String
  percentageInTune  Float
  averageDeviation  Float
  toleranceLevel       String
}

model Subscription {
  id           String   @id @default(uuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id])
  stripeSubId  String   // Stripe subscription ID
  status       SubscriptionStatus
  startedAt    DateTime @default(now())
  expiresAt    DateTime?
}

model NotePattern {
  id    Int    @id @default(autoincrement())
  name      String @unique
  pattern   Json[]
  type      String
  isPremium Boolean
  isLocked  Boolean @default(false)
  usersUnlocked UserUnlockedPattern[]
}

model UserUnlockedPattern {
  id    Int    @id @default(autoincrement())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  notePatternId Int
  notePattern   NotePattern @relation(fields: [notePatternId], references: [id])
  unlockedAt    DateTime @default(now())

  @@unique([userId, notePatternId])
}


