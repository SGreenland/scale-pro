{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDirs": ["src", "../shared"], // include shared directory
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",                      // for paths
    "paths": {
      "@shared/*": ["../shared/*"]       // map @shared for backend
    }
  },
  "include": ["src", "../shared/**/*.ts"]
}
