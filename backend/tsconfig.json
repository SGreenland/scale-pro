{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],

    "baseUrl": ".",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
